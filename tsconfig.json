{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "strictNullChecks": false,
      "noImplicitReturns": true,
      "noImplicitThis": false,
      "noEmitOnError": true
    },
    "include": [
      "./src/**/**/*"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
  }
